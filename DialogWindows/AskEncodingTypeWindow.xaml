<Window x:Class="CourseProject1.DialogWindows.AskEncodingTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject1.DialogWindows"
        mc:Ignorable="d"
        Title="Кодировка" Height="150" Width="300" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Вам известна кодировка файла?" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="274" Margin="10,10,0,0"/>
        <Button Content="Да" Margin="10,0,0,13"  Name="yesButton" IsDefault="True" Height="43" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="130" Click="yesButton_Click"/>
        <Button Content="Нет" Margin="0,0,7,13" VerticalAlignment="Bottom" Height="43" IsCancel="True" HorizontalAlignment="Right" Width="130"/>
    </Grid>
</Window>
